<h1>Topics</h1>
<div class="row">
  <div class="col-md-4">
    <%= link_to "New", new_topic_path(@topic), class: 'btn btn-success' %>
  </div>
</div>

<% @topics.each do |topic| %>
  <div class="media">
    <div class="media-body">
      <h4 class="media-heading">
        <%= link_to topic.title, topic %>
      </h4>
    </div>
  </div>
<% end %>