<h1>Topics</h1>
<div class="row">
  <div class="col-md-4">
    <%= link_to "New", new_topic_path(@topic), class: 'btn btn-success' %>
  </div>
</div><br>

<% @topics.each do |topic| %>
  <div class="media">
    <div class="media-left no-padding">
      <h2>#</h2>
    </div>
    <div class="media-body">
      <div class="media-heading">
        <h2><%= link_to topic.title, topic %></h2> 
      </div>
    </div>
  </div>
<% end %>