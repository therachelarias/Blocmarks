<h1><%= @topic.title %></h1>
  <%= link_to "Edit", edit_topic_path(@topic), class: 'btn btn-success' %>
  <%= link_to "Delete", @topic, method: :delete, class: 'btn btn-danger', data: { confirm: "Are you sure you want to delete this topic?" } %>

<div class="row">
    <% @topic.bookmarks.each do |bookmark| %>
      <div class="media">
        <div class="media-left">
          <span class="glyphicon glyphicon-star-empty" aria-hidden="true" style="color: gold"></span>
        </div>
        <div class="media-body">
          <div class="media-heading">
            <%= link_to bookmark.url, bookmark.url %>
          </div>
        </div>
      </div>
    <% end %>
</div>
